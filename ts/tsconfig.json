{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "rootDir": "./",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "prereqs/**/*",
    "tools/**/*",
    "programs/**/*",
    "cluster1/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}